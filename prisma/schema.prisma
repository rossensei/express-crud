generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Certificates {
  id            String @id @default(uuid()) @db.Uuid
  title         String
  recipientName String
  issuer        String
  signature     String
  dateIssued    DateTime @default(now())
  status        String   @default("valid")
  createdAt     DateTime @default(now())
}